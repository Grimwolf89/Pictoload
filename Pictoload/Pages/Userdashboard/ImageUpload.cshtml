@page
@model WebUI.Pages.Userdashboard.ImageUploadModel
@{
}


<div class="container-fluid w-75">

    <div >
        <div class="col-sm align-content-center" >
            <img src="@Model.FileName" class="mb-3" alt="..." height=200 />
        </div>
        <div class="col-sm" >
           <form method="post">
               <div class="form-group">
                   <label>Title</label>
                   <input type="text" class="form-control" placeholder="Title" asp-for=Photo.Name>
               </div>
               <div class="form-group">
                   <label>Geolocation</label>
                   <input type="text" class="form-control" placeholder="Location" asp-for=Photo.Geolocation>
               </div>
               <div class="form-group">
                   <label>Captured By</label>
                   <input type="text" class="form-control" placeholder="Enter name" asp-for=Photo.CapturedBy>
               </div>
               <div class="form-group">
                   <label>Date Captured</label>
                   <input type="date" class="form-control" placeholder="Capture date" asp-for=Photo.DateCaptured>
               </div>
               <div class="form-group">
                   <label>Tags</label>
                   <input type="text" class="form-control" placeholder="Ex. lion, nature, animals" asp-for=TagString >
               </div>
                    <div class="d-lg-block">                      
                        <input class="btn-primary btn-block rounded p-1" type="submit" value="Submit" />
                    </div>
               
           </form>
        </div>
    </div>
  

</div>



