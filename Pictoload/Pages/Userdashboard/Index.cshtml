@page
@model WebUI.Pages.Userdashboard.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="mb-lg-6 mt-lg-6 ">
    <h3>Upload images</h3>
    <form class="form-group input-group-text " method="post" enctype="multipart/form-data">
    <input class="" type="file" asp-for="Upload" />
    <input  type="submit" />
    </form>
</div>


<div>
<h3>Your albums</h3>
<div class="d-inline-flex align-content-center" width=100%>    
@foreach (var item in Model.UserAlbums) {
    @*<ul>
        <li>@item.AlbumTitle</li>
        <li>@item.ThumbnailPath</li>
    </ul>*@
    <div class="card m-1 text-center" style="width: 15rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@item.AlbumTitle</h5>
    @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
    <a href="#" class="btn btn-link">View Photos</a>
  </div>
</div>
}
</div>
</div>
<div>
<h3>Albums shared with me</h3>
<div class="d-inline-flex align-content-center" width=100%>    
@foreach (var item in Model.SharedAlbums) {
    @*<ul>
        <li>@item.AlbumTitle</li>
        <li>@item.ThumbnailPath</li>
    </ul>*@
    <div class="card m-1 text-center" style="width: 15rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@item.AlbumTitle</h5>
    @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
    <a href="#" class="btn btn-link">View Photos</a>
  </div>
</div>
}
</div>
</div>

