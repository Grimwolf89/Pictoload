@page
@model WebUI.Pages.Userdashboard.PhotoDetailsModel

@{
    ViewData["Title"] = "PhotoDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Details for @Model.Photo.Name</h4>



<div>
    <img src = "@Model.Photo.ImagePath" download height=250/>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Geolocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Geolocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.DateCaptured)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.DateCaptured)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.CapturedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.CapturedBy)
        </dd>
        <dt class="col-sm-2">
            <h6 class="font-weight-bold">Tags</h6>
        </dt>
        <dd class="col-sm-10 d-inline-flex">
            @foreach(var item in @Model.tagList)
            { 
                if (item != null)
                {
                    <p>@item.Title.ToString() &nbsp; </p>
                }
              
            }
        </dd>
        <a href="@Model.Photo.ImagePath" download="newFile.png" target="_blank" >Download</a>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.ImagePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.User.Id)
        </dd>*@
    </dl>
</div>


<div>
    <a asp-page="./UpdatePhotoData" asp-route-id="@Model.Photo.Id">Edit</a> |
